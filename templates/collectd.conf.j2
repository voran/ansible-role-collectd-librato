Hostname    "{{ ansible_hostname }}"
FQDNLookup   false

Interval {{ collectd_interval }}

LoadPlugin write_http
{% for plugin in collectd_plugins %}
LoadPlugin {{ plugin }}
{% endfor %}

{% if 'df' in collectd_plugins %}
<Plugin "df">
  FSType "tmpfs"
  FSType "devtmpfs"
  IgnoreSelected true
</Plugin>
{% endif %}


{% if collectd_aggregate_cpu_metrics %}

{% if 'cpu' not in collectd_plugins %}
LoadPlugin cpu
{% end %}

LoadPlugin aggregation

<Plugin "aggregation">
  <Aggregation>
    Plugin "cpu"
    Type "cpu"

    GroupBy "Host"
    GroupBy "TypeInstance"

    CalculateSum true
    CalculateAverage true
  </Aggregation>
</Plugin>
{% endif %}

{% if 'cpu' in collectd_plugins or collectd_aggregate_cpu_metrics == 'yes' %}
LoadPlugin "match_regex" # we want to use this for our Matching
<Chain "PostCache">
  <Rule> # Send "cpu" values to the aggregation plugin.
    <Match regex>
      Plugin "^cpu$"
      PluginInstance "^[0-9]+$"
    </Match>
    <Target write>
      Plugin "aggregation"
    </Target>
    Target stop
  </Rule>
  Target "write"
</Chain>
{% endif %}


<Plugin write_http>
    <URL "https://collectd.librato.com/v1/measurements">
        User "{{ librato_email }}"
        Password "{{ librato_token }}"
        Format "JSON"
    </URL>
</Plugin>

Include "/etc/collectd/collectd.conf.d"
